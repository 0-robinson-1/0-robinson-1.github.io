{
  "version": 2,
  "builds": [
    {
      "src": "blockchain-app/dist/**",
      "use": "@vercel/static"
    },
    {
      "src": "blockchain-app/api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/visitor-counter",
      "dest": "/api/visitor-counter.js"
    },
    {
      "src": "/api/get-wallet/(.*)",
      "dest": "/blockchain-app/api/get-wallet.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/blockchain-app/api/$1"
    },
    {
      "src": "/blockchain/(.*)",
      "dest": "/blockchain-app/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/blockchain-app/dist/index.html"
    }
  ]
}